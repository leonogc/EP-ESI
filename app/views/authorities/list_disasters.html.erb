<%= javascript_include_tag "auth_list" %>

<h1>Disaster List</h1>
<p id="coord"></p>

<table>
  <thead>
    <tr>
      <th>Verified</th>
      <th>Type</th>
      <th>Obs</th>
      <th>User</th>
      <th>Distance</th>
      <th>Upvotes</th>
      <th>Downvotes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @markers.each do |marker| %>
      <tr>
        <td><%= marker.verified %></td>
        <td><%= marker.disaster_type %></td>
        <td><%= marker.obs %></td>
        <td><%= marker.user_id %></td>
        <td><%=<script>calculateDistance(<%= marker.latitude %>, <%= marker.longitude %>, <%= session[:latitude] %>, <%= session[:longitude] %>);</script> Km</td>
        <td><%= marker.upvotes %></td>
        <td><%= marker.downvotes %></td>
        <td><%= link_to 'Show', marker %></td>
        <td><%= link_to 'Edit', edit_marker_path(marker) %></td>
        <td><%= link_to 'Destroy', marker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>