<h1>Register Authority</h1>

<% if @authority.errors.any? %>
<div id="error_explanation">
    <ul>
        <% @authority.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
</div>
<% end %>

<%= form_with scope: :authorities, local: true do |form| %>
    <p>
        <%= form.label :identifier %>
        <%= form.text_field :identifier %>
    </p>
    <p>
        <%= form.label :name %>
        <%= form.text_field :name %>
    </p>
    <p>
        <%= form.label :password %>
        <%= form.password_field :password %>
    </p>
    <p>
        <%= form.submit 'Create'%>
    </p>
<% end %>