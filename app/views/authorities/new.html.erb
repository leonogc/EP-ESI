<h1>Authority Login</h1>

<% flash.each do |type, msg| %>
    <div id="error_explanation">    
        <%= msg %>
    </div>
    <% end %>

<%= form_with url: authorities_login_path do |form| %>
    <p>
        <%= form.label :identifier %>
        <%= form.text_field :identifier %>
    </p>
    <p>
        <%= form.label :password %>
        <%= form.password_field :password %>
    </p>
    <p>
        <%= form.submit 'Login'%>
    </p>
<% end %>