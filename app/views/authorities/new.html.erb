<div class="default-container">
    <div class="sidebar"></div>
    <div class="hero">
        <h1 class="title">Register Authority</h1>

        <% if @authority.errors.any? %>
        <div id="error_explanation">
            <ul>
                <% @authority.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
        <% end %>

        <%= form_with scope: :authorities, local: true do |form| %>
            <div class="field">
                <%= form.label :identifier %>
                <%= form.text_field :identifier, placeholder: "write the identifier..."%>
            </div>
            <div class="field">
                <%= form.label :name %>
                <%= form.text_field :name, placeholder: "write the name..." %>
            </div>
            <div class="field">
                <%= form.label :password %>
                <%= form.password_field :password, placeholder: "write the password..." %>
            </div>
            <div class="buttons-container">
                <%= form.submit 'Create', class:"button"%>
            </div>
        <% end %>
        <div class="buttons-container">
            <%= link_to "Back", :back, class: 'button' %>
        </div>
    </div>
    <div class="sidebar"></div>
</div>