<div class="default-container">
    <div class="sidebar"></div>
    <div class="hero">
        <img class="logo" src="/logo.png" alt="EnvSignal"/>
        <h1 class="title">Authority</h1>
            <% flash.each do |type, msg| %>
                <div id="error_explanation">    
                    <%= msg %>
                </div>
                <% end %>
            <% flash.clear %>
            <%= form_with url: authorities_login_path do |form| %>
                <div class="field">
                    <%= form.label :identifier %>
                    <%= form.text_field :identifier, placeholder: "write your identifier..."  %>
                </div>
                <div class="field">
                    <%= form.label :password %>
                    <%= form.password_field :password, placeholder: "write your password..."  %>
                </div>
                <div class="buttons-container">
                    <%= form.submit 'Login', class:"button"%>
                </div>
                <span>or <%= link_to "sign in as user", "/users/login", class: "user_login_link"%></span>
        <% end %>
    </div>
    <div class="sidebar"></div>
    </div>
