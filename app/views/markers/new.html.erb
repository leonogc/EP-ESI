<% if @marker.errors.any? %>
<div id="error_explanation">
    <h2>
        <% @marker.errors.count%> erro(s) impedindo o cadastro
    </h2>
    
    <ul>
        <% @marker.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
</div>
<% end %>

<%= form_with scope: :markers, url: markers_path, local: true do |form| %>
<h1>New Marker</h1>
<%= form.label :disaster_type %>
<%= form.select :disaster_type, 
[['Vazamento de Água', 'vazamento'], 
['Incêndio', 'incendio'],
['Despejo Irregular de Esgoto', 'esgoto'], 
['Descarte Irregular de Lixo', 'lixo']] %>

  <p>
    <%= form.label :latitude %>
    <%= form.text_field :latitude %>
  </p>

  <p>
    <%= form.label :longitude %>
    <%= form.text_field :longitude %>
  </p>

  <p>
    <%= form.label :obs %>
    <%= form.text_field :obs %>
  </p>

  <p>
    <%= form.submit 'Create'%>
  </p>
<% end %>


<%= link_to 'Back', root_path, method: 'get' %>
<%= javascript_include_tag "markers" %>