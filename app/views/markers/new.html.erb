<%= form_with(model: @marker) do |form| %>
<h1>New Marker</h1>
<%= form.label :latitude %>
<%= form.select :disaster_type, 
[['Vazamento de Água', 'vazamento'], 
['Incêndio', 'incendio'],
['Despejo Irregular de Esgoto', 'esgoto'], 
['Descarte Irregular de Lixo', 'lixo']] %>

  <div class="field">
    <%= form.label :latitude %>
    <%= form.text_field :latitude %>
  </div>

  <div class="field">
    <%= form.label :longitude %>
    <%= form.text_field :longitude %>
  </div>

  <div class="field">
    <%= form.label :obs %>
    <%= form.text_field :obs %>
  </div>

  <div class="actions">
    <%= form.submit 'Create'%>
  </div>
<% end %>


<%= link_to 'Back', root_path, method: 'get' %>
<%= javascript_include_tag "markers" %>