<% if @user.errors.any? %>
<div id="error_explanation">
    <h2>
        <% @user.errors.count%> erro(s) impedindo o cadastro
    </h2>
    
    <ul>
        <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
</div>
<% end %>

<%= form_with scope: :users, url: users_path, local: true do |form| %>
    <p>
        <%= form.label :name %><br />
        <%= form.text_field :name %>
    </p>
    <p>
        <%= form.label :birth_date, "Birth Date" %><br />
        <%= form.date_field :birth_date %>
    </p>
    <p>
        <%= form.label :username %><br />
        <%= form.text_field :username %>
    </p>
    <p>
        <%= form.label :email %><br />
        <%= form.email_field :email %>
    </p>
    <p>
        <%= form.label :confirm_email, "Confirm Email" %><br />
        <%= form.email_field :confirm_email %>
    </p>
    <p>
        <%= form.label :password %><br />
        <%= form.password_field :password %>
    </p>
    <p>
        <%= form.label :confirm_password, "Confirm Password" %><br />
        <%= form.password_field :confirm_password %>
    </p>
    <p>
        <%= form.submit 'Create'%>
    </p>
<% end %>