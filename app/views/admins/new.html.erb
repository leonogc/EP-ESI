<div class="default-container">
    <div class="sidebar"></div>
    <div class="hero">
        <img class="logo" src="/logo.png" alt="EnvSignal"/>
        <h1 class="title">Admin</h1>

        <% flash.each do |type, msg| %>
            <div id="error_explanation">    
                <%= msg %>
            </div>
            <% end %>

        <%= form_with url: admin_login_path do |form| %>
            <div class="field">
                <%= form.label :username %>
                <%= form.text_field :username, placeholder: "write your username..."  %>
            </div>
            <div class="field">
                <%= form.label :password %>
                <%= form.password_field :password, placeholder: "write your password..."  %>
            </div>
            <div class="buttons-container">
                <%= form.submit 'Login', class:"button"%>
            </div>
        <% end %>
    </div>
    <div class="sidebar"></div>
</div>