<%= javascript_include_tag "marker_list" %>
<div class="default-container">
    <div class="sidebar"></div>
    <div class="hero">

    <p id="notice"><%= notice %></p>

    <h1 class="title">Users</h1>

    <div class="overflow-container" id="users">
      <table class="sortable">
        <thead>
          <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Name</th>
            <th>Birth Date</th>
            <th>Created At</th>    
            <th colspan="3"> Actions</th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.username %></td>
              <td><%= user.email %></td>
              <td><%= user.name %></td>
              <td><%= user.birth_date.strftime("%d/%m/%Y") %></td>
              <td><%= user.created_at.strftime("%d/%m/%Y") %></td>
              <td><%= link_to 'Edit', admin_edit_user_path(@user, user: user) %></td>
              <td><%= link_to 'Destroy', users_path(@user, user: user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>    
    </div>
    <div class="buttons-container">
      <%= link_to "Back", '/admin', class: 'button' %>
    </div>
  </div>
<div class="sidebar"></div>
</div>